<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.item.confirm.mapper.ConfirmMapper">

	<update id="saveConfirm" parameterType="com.example.model.Confirm">
        UPDATE confirmlist 
        SET IMAGE = #{imageData}, DESCRIPT = #{descript} 
        WHERE ID = #{id}
    </update>

    <select id="getImageInfoById" parameterType="Long" resultType="com.example.model.Confirm">
        SELECT image, descript
        FROM confirmlist
        WHERE id = #{id}
    </select>
</mapper>